<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="5dp"
    android:layout_margin="10dp"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:background="#E3E1E1">

        <ImageView
            android:id="@+id/ivGo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_shopping_cart_24"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/tvProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Producto"
            android:textSize="30sp"
            android:layout_marginEnd="10dp"
            />

        <Button
            android:id="@+id/btnAdd"
            android:contentDescription="Add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_add_24"
            android:layout_marginEnd="10dp"/>
        <Button
            android:id="@+id/btnEdit"
            android:contentDescription="Edit"

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_edit_24"
            android:layout_marginEnd="10dp"/>
        <Button
            android:id="@+id/btnDelete"
            android:contentDescription="Delete"

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_delete_24"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>